{
  "name": "pekral/http-client",
  "description": "",
  "type": "library",
  "keywords": [],
  "license": "MIT",
  "authors": [
    {
      "name": "Petr Kr√°l",
      "email": "kral.petr.88@gmail.com",
      "role": "Maintainer"
    }
  ],
  "scripts": {
    "check": [
      "phpcs --standard=phpcs-rules src/ tests/",
      "phpstan analyse src/ --level=max --memory-limit=1G",
      "./vendor/bin/pint --test"
    ],
    "fix": [
      "phpcbf --standard=phpcs-rules src/ tests/",
      "rector process src/ tests/ --config=vendor/pekral/rector-rules/rector.php",
      "./vendor/bin/pint --parallel"
    ],
    "test": "phpunit tests/"
  },
  "require": {
    "php": "^8.4",
    "guzzlehttp/guzzle": "^7.9.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.3.0",
    "pekral/phpcs-rules": "^0.4.1",
    "pekral/rector-rules": "^0.4.1",
    "pekral/phpstan-rules": "^0.4.1",
    "laravel/pint": "^1.24",
    "mockery/mockery": "^1.6",
    "fakerphp/faker": "^1.24"
  },
  "autoload": {
    "psr-4": {
      "Pekral\\HttpClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pekral\\HttpClient\\Tests\\": "tests/"
    }
  },
  "support": {
    "issues": "https://github.com/pekral/flexibee-php/issues",
    "source": "https://github.com/pekral/flexibee-php"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}